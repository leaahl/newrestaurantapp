<%= form_with(model: restaurant, local: true) do |form| %>

<div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :restaurant_name %>
  </div>

  <div class="field">
    <%= form.label :review %>
    <%= form.text_area :description, id: :restaurant_description %>
  </div>

  <div class="field">
    <%= form.label :picture %>
    <%= form.file_field :picture, id: :restaurant_image_url %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
